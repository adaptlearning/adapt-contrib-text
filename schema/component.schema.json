{
  "$anchor": "text-component",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "$merge": {
    "source": {
      "$ref": "component"
    },
    "with": {
      "properties": {
        "_supportedLayout": {
          "type": "string",
          "title": "Supported layout",
          "default": "both",
          "enum": [
            "full-width",
            "half-width",
            "both"
          ],
          "_adapt": {
            "editorOnly": true
          }
        },
        "instruction": {
          "type": "string",
          "title": "Instruction",
          "default": "",
          "_adapt": {
            "translatable": true
          }
        }
      }
    }
  }
}
